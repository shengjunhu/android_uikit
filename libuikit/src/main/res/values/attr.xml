<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SeekBars">
        <!--min < max, default: 0.0f-->
        <attr name="sb_min" format="float|reference" />
        <!--min < max, default: 100.0f-->
        <attr name="sb_max" format="float|reference" />
        <!--real time progress value, default: min-->
        <attr name="sb_progress" format="float|reference" />
        <!--support for float type-->
        <attr name="sb_is_float_type" format="boolean" />
        <!--height of right-track(on the right of thumb), default: 2dp-->
        <attr name="sb_track_size" format="dimension|reference" />
        <!--height of left-track(on the left of thumb), default: 2dp higher than right-track's height-->
        <attr name="sb_second_track_size" format="dimension|reference" />
        <!--radius of thumb, default: 2dp higher than left-track's height-->
        <attr name="sb_thumb_radius" format="dimension|reference" />
        <!--radius of thumb when be dragging, default: 2 times of left-track's height-->
        <attr name="sb_thumb_radius_on_dragging" format="dimension|reference" />
        <!--color of right-track, default: R.color.colorPrimary-->
        <attr name="sb_track_color" format="color|reference" />
        <!--color of left-track, default: R.color.colorAccent-->
        <attr name="sb_second_track_color" format="color|reference" />
        <!--color of thumb, default: same as left-track's color-->
        <attr name="sb_thumb_color" format="color|reference" />
        <!--shares of whole progress(max - min), default: 10-->
        <attr name="sb_section_count" format="integer|reference" />
        <!--show demarcation points or not, default: false-->
        <attr name="sb_show_section_mark" format="boolean" />
        <!--auto scroll to the nearest section_mark or not, default: false-->
        <attr name="sb_auto_adjust_section_mark" format="boolean" />
        <!--show section-text or not, default: false-->
        <attr name="sb_show_section_text" format="boolean" />
        <!--text size of section-text, default: 14sp-->
        <attr name="sb_section_text_size" format="dimension|reference" />
        <!--text color of section-text, default: same as right-track's color-->
        <attr name="sb_section_text_color" format="color|reference" />
        <!--text position of section-text relative to track, sides, bottom_sides, below_section_mark, default: sides-->
        <attr name="sb_section_text_position">
            <enum name="sides" value="0" />
            <enum name="bottom_sides" value="1" />
            <enum name="below_section_mark" value="2" />
        </attr>
        <!--the interval of two section-text, default: 1-->
        <attr name="sb_section_text_interval" format="integer" />
        <!--show real time progress-text under thumb or not, default: false-->
        <attr name="sb_show_thumb_text" format="boolean" />
        <!--text size of progress-text, default: 14sp-->
        <attr name="sb_thumb_text_size" format="dimension|reference" />
        <!--text color of progress-text, default: same as left-track's color-->
        <attr name="sb_thumb_text_color" format="color|reference" />
        <!--show SeekBar-progress in float or not, default: false-->
        <attr name="sb_show_progress_in_float" format="boolean" />
        <!--touch anywhere on track to quickly seek, default: false-->
        <attr name="sb_touch_to_seek" format="boolean" />
        <!--seek one step by one section, the progress is discrete, default: false-->
        <attr name="sb_seek_step_section" format="boolean" />
        <!--seek by section, the progress may not be linear, default: false-->
        <attr name="sb_seek_by_section" format="boolean" />
        <!--color of SeekBar, default: same as left-track's color-->
        <attr name="sb_bar_color" format="color|reference" />
        <!--text size of SeekBar-progress, default: 14sp-->
        <attr name="sb_bar_text_size" format="dimension|reference" />
        <!--text color of SeekBar-progress, default: #ffffffff-->
        <attr name="sb_bar_text_color" format="color|reference" />
        <!--duration of animation, default: 200ms-->
        <attr name="sb_anim_duration" format="integer" />
        <!--SeekBar shows all time, default: false-->
        <attr name="sb_always_show_bar" format="boolean" />
        <!--the delay duration before SeekBar shows all the time, default: 200ms-->
        <attr name="sb_always_show_bar_delay" format="integer" />
        <!--hide SeekBar, default: false-->
        <attr name="sb_hide_bar" format="boolean" />
        <!--right to left, default: false-->
        <attr name="sb_rtl" format="boolean" />
        <attr name="android:enabled" />
    </declare-styleable>
</resources>